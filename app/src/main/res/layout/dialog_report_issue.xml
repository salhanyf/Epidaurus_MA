<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/light_green"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="@string/menu_report_issue"
        android:textStyle="bold"
        android:textColor="@color/error_red"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:gravity="center_horizontal"
        android:padding="8dp" />

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="@string/what_went_wrong"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:textSize="16sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:gravity="start"
        android:padding="10dp" />

    <Spinner
        android:id="@+id/issueEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/outlined_box_green"
        android:popupBackground="@drawable/card_view"
        android:drawableStart="@drawable/baseline_arrow_forward_24"
        android:drawablePadding="10dp"
        android:spinnerMode="dropdown" />



    <LinearLayout
        android:id="@+id/issueCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/outline_box_green_white"

        android:elevation="4dp">

        <EditText
            android:id="@+id/issueContentEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:visibility="gone"
            android:hint="@string/please_describe_the_issue"
            android:minHeight="100dp"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:backgroundTint="@color/white"
            android:autofillHints="" />

        <EditText
            android:id="@+id/severityEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Severity" />

    </LinearLayout>

</LinearLayout>