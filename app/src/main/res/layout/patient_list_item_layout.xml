<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="6dp">
        <TextView
            android:id="@+id/NameTextView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/label_name"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="TextSizeCheck" />
        <TextView
            android:id="@+id/lstelem_nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/place_holder_name"
            android:textColor="@color/grey"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="6dp">
        <TextView
            android:id="@+id/DOBTextView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/label_date_of_birth"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="TextSizeCheck" />
        <TextView
            android:id="@+id/lstelem_dobTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/place_holder_date_of_birth"
            android:textColor="@color/grey"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="6dp">
        <TextView
            android:id="@+id/roomNumberTextView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/label_room_number"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="TextSizeCheck" />
        <TextView
            android:id="@+id/lstelem_roomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/place_holder_room_number"
            android:textColor="@color/grey"
            android:textSize="16sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/dark_green" />

</LinearLayout>